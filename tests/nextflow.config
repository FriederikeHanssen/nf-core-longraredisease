/*
========================================================================================
    Test-specific Nextflow configuration for nanoraredx pipeline
========================================================================================
*/

// Test parameters
params {
    // Test data paths - using your existing test data structure
    modules_testdata_base_path = "${projectDir}/assets/test_data/"
    
    // Basic pipeline parameters for testing
    outdir = "test_results"
    
    // Reference files for testing
    fasta_file = "${projectDir}/assets/test_data/genome_22/genome_22.fasta"
    str_bed_file = "${projectDir}/assets/test_data/straglr/str.test.bed"
    
    // Test-specific toggles (minimal for faster testing)
    align_with_bam = true
    align_with_fastq = false
    generate_bam_stats = false
    generate_coverage = false
    sv = false
    snv = false
    cnv = false
    str = false
    phase = false
    qc = false
    methyl = false
    
    // Consensus SV parameters (disabled for basic tests)
    consensuSV = false
    
    // Test data settings
    use_test_data = true
}


docker {
    enabled = true 
    runOptions = '-u $(id -u):$(id -g)'
}
